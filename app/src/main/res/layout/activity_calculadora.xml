<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalculadoraActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/pantalla"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/resultado"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/resultado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="MC"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="MR"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="MS"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="M+"
            android:id="@+id/button4"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="M-"
            android:id="@+id/button5"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="←"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="CE"
            android:id="@+id/btnborrar"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/borrar"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="±"
            android:id="@+id/btncambiodesigno"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="√"
            android:id="@+id/btnraiz"
            android:layout_row="1"
            android:layout_column="4" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/btn7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/btn8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/btn9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/btndiv"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/btnporcentaje"
            android:layout_row="2"
            android:layout_column="4" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/btn4"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/btn5"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/btn6"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/btnmult"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="1/x"
            android:id="@+id/btninversa"
            android:layout_row="3"
            android:layout_column="4" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/btn1"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/btn2"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/btn3"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/btnresta"
            android:layout_row="4"
            android:layout_column="3" />

        <Button
            android:layout_width="68dp"
            android:layout_height="95dp"
            android:text="="
            android:id="@+id/btnigual"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/btn0"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/btnpunto"
            android:layout_row="5"
            android:layout_column="2" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnsuma"
            android:layout_row="5"
            android:layout_column="3" />

    </GridLayout>



</RelativeLayout>
